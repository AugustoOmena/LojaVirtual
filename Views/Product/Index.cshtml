@model List<Product>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon-plus"></i>Agregar Novo</a>
</p>

<link rel="stylesheet" href="https://cdn.database.net/1.11.5/css/jquery.dataTables.min.css"/>
@if(Model != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h3>Produtos</h3> </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped table-bordered" id="MyTable">
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Imagem</td>
                                <td>Eliminar Imagem</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr width="100%">
                                    <td width="33%">@item.Name</td>
                                    <td width="33%"><img src="https://demoblobstorage2023.blob.core.windows.net/products/@item.UrlImage" style="width:50px" /></td>
                                    <td width="34%">
                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1" oneclick"";> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
}